<odoo>
    <record id="webservice_backend_form_view" model="ir.ui.view">
        <field name="name">webservice.backend.form (in webservice)</field>
        <field name="model">webservice.backend</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <label class="oe_edit_only" for="tech_name"/>
                        <h2>
                            <field name="tech_name"/>
                        </h2>
                    </div>
                    <group name="config">
                        <field groups="base.group_multi_company" name="company_id"/>
                        <field name="protocol"/>
                        <field name="url"/>
                        <field name="content_type"/>
                    </group>
                    <group name="auth">
                        <field name="auth_type"/>
                        <field invisible="auth_type != 'user_pwd'" name="username" required="auth_type == 'user_pwd'"/>
                        <field invisible="auth_type != 'user_pwd'" name="password" password="True" required="auth_type == 'user_pwd'"/>
                        <field invisible="auth_type != 'api_key'" name="api_key" password="True" required="auth_type == 'api_key'"/>
                        <field invisible="auth_type != 'api_key'" name="api_key_header" required="auth_type == 'api_key'"/>
                    </group>
                </sheet>
            </form></field>
    </record>
    <record id="webservice_backend_search_view" model="ir.ui.view">
        <field name="name">webservice.backend.search (in webservice)</field>
        <field name="model">webservice.backend</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="url"/>
                <field name="protocol"/>
                <field name="tech_name"/>
            </search></field>
    </record>
    <record id="webservice_backend_tree_view" model="ir.ui.view">
        <field name="name">webservice.backend.tree (in webservice)</field>
        <field name="model">webservice.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tech_name"/>
                <field name="url"/>
                <field name="protocol"/>
                <field groups="base.group_multi_company" name="company_id" optional="hide"/>
            </tree></field>
    </record>
    <record id="webservice_backend_act_window" model="ir.actions.act_window">
        <field name="name">WebService Backend</field>
        <field name="res_model">webservice.backend</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record id="webservice_backend_menu" model="ir.ui.menu">
        <field name="name">WebService Backend</field>
        <field name="parent_id" ref="base.menu_custom"/>
        <field name="action" ref="webservice_backend_act_window"/>
        <field eval="100" name="sequence"/>
    </record>
</odoo>
